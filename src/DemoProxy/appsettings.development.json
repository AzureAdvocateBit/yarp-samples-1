{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "items",
        "BackendId": "itemsapi",
        "Match": {
          "Host": "items",
          "Path": "/items/{**catchall}"
        }
      },
      {
        "RouteId": "addresses",
        "BackendId": "addressesapi",
        "Match": {
          "Host": "addresses",
          "Path": "/addresses/{**catchall}"
        }
      }
    ],
    "Backends": {
      "itemsapi": {
        "Destinations": {
          "itemsapi_backend1": {
            "Address": "https://localhost:5001/api/"
          }
        }
      },
      "addressesapi": {
        "Destinations": {
          "addressesapi_backend1": {
            "Address": "https://localhost:5002/api/"
          }
        }
      }
    }
  }
}
