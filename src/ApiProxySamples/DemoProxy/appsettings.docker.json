{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "items",
        "BackendId": "itemsapi",
        "Match": {
          "Host": "items",
          "Path": "/items/{**catchall}"
        }
      },
      {
        "RouteId": "addresses",
        "BackendId": "addressesapi",
        "Match": {
          "Host": "addresses",
          "Path": "/addresses/{**catchall}"
        }
      }     
    ],
    "Backends": {
      "itemsapi": {
        "Destinations": {
          "backend1_destination1": {
            "Address": "https://demoitemsapi/api/"
          }
        }
      },
      "addressesapi": {
        "Destinations": {
          "backend2_destination1": {
            "Address": "https://addressesapi/api/"
          }
        }
      }      
    }
  }
}
